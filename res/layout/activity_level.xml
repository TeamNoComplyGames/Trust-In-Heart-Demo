<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding ="5dp"
    android:orientation="vertical" 
    android:background="@drawable/world1"
    android:scaleType="centerCrop"
    tools:context="com.torch2424.battlequest.Overworld" >
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/level5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/lockedbosslevelicon"
            android:contentDescription="@string/tank"
            android:onClick="battle"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/level4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/lockedlevelicon"
            android:contentDescription="@string/tank"
            android:onClick="battle"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/level3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/lockedlevelicon"
            android:contentDescription="@string/tank"
            android:onClick="battle"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/level2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/lockedlevelicon"
            android:contentDescription="@string/tank"
            android:onClick="battle"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/level1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/levelicons"
            android:contentDescription="@string/tank"
            android:onClick="battle"
            android:scaleType="fitCenter" />
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="bottom" >
    
         <Button
            android:id="@+id/quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
       		 android:layout_alignParentBottom="true"
       		 android:layout_alignParentLeft="true"
            android:background="@drawable/buttons"
            android:onClick="cancel"
            android:text="@string/back" />
         
          <ImageView
            android:id="@+id/player"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/dmm"
            android:clickable="true"
            android:onClick="playerClick"
            android:contentDescription="@string/crit" />
        
        
    </RelativeLayout>
    
</LinearLayout>
