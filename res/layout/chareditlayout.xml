<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context="com.torch2424.battlequest.CharEdit"
    android:background="@drawable/character_bg" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <ImageView 
            android:id="@+id/player"
            android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/crit"
        android:background="@drawable/dmm"
            />
    
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="50sp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <TextView
        android:id="@+id/charclass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <TextView
        android:id="@+id/wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <TextView
        android:id="@+id/losses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <TextView
        android:id="@+id/totalBattles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <TextView
        android:id="@+id/guaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
     <!-- items and equipment at bottom to look better -->
    
    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <TextView
        android:id="@+id/exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <TextView
        android:id="@+id/equip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="50sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/equipment" />
    
    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <TextView
        android:id="@+id/torso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <TextView
        android:id="@+id/leg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <TextView
        android:id="@+id/feet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <TextView
        android:id="@+id/weapon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
       <Button
            android:id="@+id/changeEquip"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:onClick="changeEquip"
            android:text="@string/changeEquip" />
    
    <TextView
        android:id="@+id/skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="50sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/skills" />
    
    <TextView
        android:id="@+id/available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <!-- HP -->
    <RelativeLayout 
        android:layout_width="250dp"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_gravity="center_horizontal">
        
        <Button
            android:id="@+id/minusHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/minusbutton"
            android:onClick="minus"
            android:layout_alignParentLeft="true"
            android:text="@string/minus" />
        
        <TextView
            android:id="@+id/editHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#000000"
             android:textSize="20sp"
             android:layout_centerInParent="true"
            android:text="@string/loading" />
        
        <Button
            android:id="@+id/plusHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/plusbutton"
            android:onClick="plus"
             android:layout_alignParentRight="true"
            android:text="@string/plus" />
        
    </RelativeLayout>
    
    
     <!-- Strength -->
    <RelativeLayout 
        android:layout_width="250dp"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_gravity="center_horizontal">
        
        <Button
            android:id="@+id/minusStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/minusbutton"
            android:onClick="minus"
             android:layout_alignParentLeft="true"
            android:text="@string/minus" />
        
         <TextView
            android:id="@+id/editStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#000000"
             android:textSize="20sp"
             android:layout_centerInParent="true"
            android:text="@string/loading" />
        
        <Button
            android:id="@+id/plusStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/plusbutton"
            android:onClick="plus"
             android:layout_alignParentRight="true"
            android:text="@string/plus" />
        
    </RelativeLayout>
    
    
    <!-- intelligence (Int) -->
    <RelativeLayout 
        android:layout_width="250dp"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_gravity="center_horizontal">
        
        <Button
            android:id="@+id/minusInt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/minusbutton"
            android:onClick="minus"
             android:layout_alignParentLeft="true"
            android:text="@string/minus" />
        
         <TextView
            android:id="@+id/editInt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#000000"
             android:textSize="20sp"
             android:layout_centerInParent="true"
            android:text="@string/loading" />
        
        <Button
            android:id="@+id/plusInt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/plusbutton"
            android:onClick="plus"
             android:layout_alignParentRight="true"
            android:text="@string/plus" />
        
    </RelativeLayout>
    
    <!-- Dexterity (Dex) -->
    <RelativeLayout 
        android:layout_width="250dp"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_gravity="center_horizontal">
        
        <Button
            android:id="@+id/minusDex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/minusbutton"
            android:onClick="minus"
             android:layout_alignParentLeft="true"
            android:text="@string/minus" />
        
         <TextView
            android:id="@+id/editDex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#000000"
             android:textSize="20sp"
             android:layout_centerInParent="true"
            android:text="@string/loading" />
        
        <Button
            android:id="@+id/plusDex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/plusbutton"
            android:onClick="plus"
             android:layout_alignParentRight="true"
            android:text="@string/plus" />
        
    </RelativeLayout>
    
    <!-- Total Stats -->
    <TextView
        android:id="@+id/stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="50sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/totalStats" />
    
    
    <TextView
        android:id="@+id/totalHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <TextView
        android:id="@+id/totalStrength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <TextView
        android:id="@+id/totalInt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    <TextView
        android:id="@+id/totalDex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
         android:textSize="20sp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:text="@string/loading" />
    
    
    <!-- save or cancel -->
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:gravity="center">
        
        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:onClick="cancel"
            android:text="@string/cancel" />
        
        <!-- Adding text view here to space out items -->
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#000000"
             android:paddingLeft="20dp"
            android:paddingRight="20dp"
             android:textSize="20sp"
            android:text="" />
        
        <Button
            android:id="@+id/saveChar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:onClick="saveChar"
            android:text="@string/save" />
        
    </LinearLayout>
    
    
    
    
  </LinearLayout>

</ScrollView>
