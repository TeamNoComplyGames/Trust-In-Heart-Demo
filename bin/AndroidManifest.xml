<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.torch2424.trustinheartdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!--
    to stop game from going landscape
    android:screenOrientation="portrait"
    android:configChanges="keyboardHidden|orientation|screenSize"
    -->

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation|screenSize"
        android:icon="@drawable/hearticon2"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:largeHeap="true"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        
         <activity
            android:name="com.torch2424.battlequest.FirstScreen"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.torch2424.battlequest.SaveFileSelect"
            android:label="@string/title_activity_battle"
            android:screenOrientation="portrait" >
        </activity>
         <activity
            android:name="com.torch2424.broquest.StartScreen"
            android:label="@string/title_activity_battle"
            android:screenOrientation="portrait" >
         </activity>
        <activity
            android:name="com.torch2424.broquest.Battle"
            android:label="@string/title_activity_battle"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.torch2424.battlequest.BossBattle"
            android:label="@string/title_activity_battle"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.torch2424.broquest.Creator"
            android:label="@string/title_activity_creator"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.torch2424.battlequest.CharEdit"
            android:label="@string/title_activity_char_edit"
            android:screenOrientation="portrait" >
        </activity>

        <service android:name="com.torch2424.battlequest.BGMusic" />

        <activity
            android:name="com.torch2424.battlequest.Overworld"
            android:label="@string/title_activity_overworld"
            android:screenOrientation="portrait" >
        </activity>
         <activity
            android:name="com.torch2424.battlequest.Level"
            android:label="@string/title_activity_overworld"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.torch2424.battlequest.Journal"
            android:label="@string/title_activity_overworld"
            android:screenOrientation="portrait" >
        </activity>
         <activity
            android:name="com.torch2424.battlequest.ShopOverworld"
            android:label="@string/title_activity_overworld"
            android:screenOrientation="portrait" >
        </activity>
         <activity
            android:name="com.torch2424.battlequest.InShop"
            android:label="@string/title_activity_overworld"
            android:screenOrientation="portrait" >
        </activity>
         <activity
            android:name="com.torch2424.battlequest.ChangeEquip"
            android:label="@string/title_activity_overworld"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.torch2424.battlequest.WelcomeRRPPGG"
            android:label="@string/title_activity_overworld"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.torch2424.battlequest.DemoOver"
            android:label="@string/title_activity_overworld"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
